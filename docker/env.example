# API服务配置
API_PORT=3000
API_NODE_ENV=production
API_LOG_LEVEL=info

# UI服务配置
UI_PORT=8080
UI_NODE_ENV=production
UI_LOG_LEVEL=info

# Nginx配置
NGINX_SERVER_NAME=update-server.example.com
NGINX_SSL_CERT=/etc/nginx/ssl/cert.pem
NGINX_SSL_KEY=/etc/nginx/ssl/key.pem

# 资源限制
API_CPU_LIMIT=0.5
API_MEMORY_LIMIT=512M
UI_CPU_LIMIT=0.5
UI_MEMORY_LIMIT=512M

# 容器标签
APP_VERSION=1.0.0
MAINTAINER=your-email@example.com 